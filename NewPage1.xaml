<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAB2_OOP_MAUI.NewPage1"
             Title="Спорткомплекс"
             BackgroundColor="#f0f2f5">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Спорт на факультеті" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="#333"/>

            <Frame BorderColor="#1565c0" CornerRadius="10" Padding="15" BackgroundColor="#e3f2fd">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Авторизація" FontAttributes="Bold" TextColor="#1565c0" HorizontalOptions="Center"/>

                    <Entry x:Name="LoginEntry" 
                           Placeholder="Введіть ваш login" 
                           TextColor="Black" 
                           PlaceholderColor="Gray"
                           BackgroundColor="White"/>

                    <Entry x:Name="PasswordEntry" 
                           Placeholder="Введіть пароль" 
                           IsPassword="True" 
                           TextColor="Black" 
                           PlaceholderColor="Gray"
                           BackgroundColor="White"/>

                    <Button Text="Увійти в систему" 
                            Clicked="OnLoginClicked" 
                            BackgroundColor="#1877f2" 
                            TextColor="White" 
                            CornerRadius="20"/>

                    <Label x:Name="UserStatusLabel" 
                           Text="Ви не увійшли в систему" 
                           TextColor="Red" 
                           HorizontalOptions="Center" 
                           FontSize="12"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Подивитись мій розклад" 
                Clicked="OnMyScheduleClicked" 
                BackgroundColor="#1877f2" 
                TextColor="White" 
                Margin="0,20,0,0"/>
            <Frame BorderColor="Gray" CornerRadius="10" Padding="15" BackgroundColor="White">
                <VerticalStackLayout Spacing="10">
                   
                            <Label Text="Мій розклад:" FontAttributes="Bold" TextColor="Black"/>

                            <Editor x:Name="MyScheduleEditor"
                                HeightRequest="100"
                                IsReadOnly="True"
                                BackgroundColor="#f0f2f5"
                                TextColor="Black"
                                Placeholder="Тут з'явиться твій розклад..."/>

                        
                </VerticalStackLayout>
            </Frame>



            <Frame x:Name="StrategyFrame" BorderColor="Gray" CornerRadius="10" Padding="15" BackgroundColor="White">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Метод пошуку:" FontAttributes="Bold" TextColor="Black"/>

                    <RadioButton x:Name="RbLinq" Content="LINQ to XML" IsChecked="True" GroupName="StrategyGroup" TextColor="Black"/>
                    <RadioButton x:Name="RbDom" Content="DOM API" GroupName="StrategyGroup" TextColor="Black"/>
                    <RadioButton x:Name="RbSax" Content="SAX API" GroupName="StrategyGroup" TextColor="Black"/>
                </VerticalStackLayout>
            </Frame>

            <Frame x:Name="SearchFrame" BorderColor="Gray" CornerRadius="10" Padding="15" BackgroundColor="White">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Параметри секції:" FontAttributes="Bold" TextColor="Black"/>

                    <Entry x:Name="NameEntry" Placeholder="Назва (напр. Basketball)" TextColor="Black"/>
                    <Entry x:Name="CoachEntry" Placeholder="Тренер" TextColor="Black"/>
                    <Entry x:Name="TimeEntry" Placeholder="Час" TextColor="Black"/>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,10,0,0">
                        <Button Text=" Пошук" 
                                Clicked="OnSearchClicked" 
                                BackgroundColor="#42b72a" 
                                TextColor="White" 
                                WidthRequest="120"/>

                        <Button Text=" Clear" 
                                Clicked="OnClearClicked" 
                                BackgroundColor="#e4e6eb" 
                                TextColor="Black" 
                                WidthRequest="100"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <VerticalStackLayout x:Name="ResultsLayout" Spacing="5">
                <Label Text="Результати:" FontAttributes="Bold" TextColor="#333"/>
                <Editor x:Name="ResultsEditor" 
                        HeightRequest="150" 
                        IsReadOnly="True" 
                        BackgroundColor="White" 
                        TextColor="Black"/>
            </VerticalStackLayout>

            <Button Text="Зберегти звіт у HTML" 
                Clicked="OnHtmlClicked" 
                BackgroundColor="Orange" 
                TextColor="White" 
                FontAttributes="Bold"
                Margin="0,10,0,0"/>


            <Button Text="Вихід з програми" 
                    Clicked="OnExitClicked" 
                    BackgroundColor="#ff4444" 
                    TextColor="White" 
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>